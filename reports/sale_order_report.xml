<odoo>
  <data>
    <template inherit_id="sale.report_saleorder_document" id="nuboogh_saleorder_document">

      <xpath expr="//th[@name='th_description']" position="after">
        <th name="th_name_2" class="text-center">إسم المادة 2</th>
        <th name="th_country_origin" class="text-center">بلد المنشأ</th>
        <th name="th_model" class="text-center">الموديل</th>
      </xpath>

      <xpath expr="//td[@name='td_name']" position="after">
        <td name="td_name_2"><span t-field="line.product_id.product_name_2"/></td>
        <td name="td_country_origin"><span t-field="line.product_id.country_of_origin"/></td>
        <td name="td_model"><span t-field="line.product_id.product_type"/></td>
      </xpath>

    </template>
  </data>
</odoo>
