<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <template id="report_assets_common_custom_fonts" name="Custom QWeb fonts" inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <link href="al-nuboogh/static/src/css/fonts.css" rel="stylesheet" type="text/css"/>
        </xpath>
    </template>


          <template inherit_id="web.external_layout_standard" id="custom_standard_layout_header" > 
                    <xpath expr="//div[hasclass('header')]//div[1]//div[1]" position="replace">  
                         <div class="col-9 " align="right" style="direction:rtl;">
                         <h1 class="comp_name">النبوغ</h1> 
                          <p class="arabic_title"> تجارة الادوية الاحتياطية والمنزلية <br/>
                           تدفئة و تبريد - جملة و مفرد -  استيراد و تصدير</p>   
                           </div> 
                             <div class="col-3 mt12" style="direction:rtl; margin-top:10px">
                              <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>
                            </div>                     
                    </xpath> 

          </template>



          <template inherit_id="web.external_layout_standard" id="custom_standard_layout_footer"> 
                    <xpath expr="//div[hasclass('footer')]//div[1]//ul" position="replace">  
                                           <div class="con_p row text-right" align="center" style="direction:rtl;">
                                          <div class="inner_div">
                                           <p class="text-right" >الهاتف :
                                           <span t-field="company.phone"/>
                                           </p>
                                              </div>
                                          <div class="inner_div">
                                          <p class="text-right m10" >  البريد الالكتروني :
                                                    <span t-field="company.email"/>
                                          </p>
                                        </div>
                                          <div class="inner_div">
                                          <p class="text-right m10" > الموقع الالكتروني :
                                          <span t-field="company.website"/>

                                          </p>
                                          </div>
                                           </div>   
                    </xpath> 
          </template> 






      <template  id="invoice_report" inherit_id="account.report_invoice_document"> 
         <xpath expr="//div[@id='informations']//div[@name='origin']" position="after">
                <div class="col-auto mw-100 mb-2" t-if="o.warehouse_location_id">
                  <strong>
                    المخزن:  
                  </strong>
                  <br/> 
                 <p t-field="o.warehouse_location_id.location_id"></p>
                 </div>

                 <div class="col-auto mw-100 mb-2" t-if="o.invoice_type">
                  <strong>
                    نوع الفاتورة :  
                  </strong>
                  <br/> 
                 <p t-field="o.invoice_type"></p>
                 </div>
                 </xpath>



        <xpath expr="//table[@name='invoice_line_table']//th[@name='th_subtotal']" position="after" >
                <th name="th_type" class="text-right orisdi"><span class="orisdi">نوع المنتج</span></th> 
        </xpath>
         
         
          <xpath expr="//tbody[@class='invoice_tbody']//t[@name='account_invoice_line_accountable']" position="after">
                               
                               <td name='line.type' class="text-right orisdi" >
                                  <span t-field='line.product_id.product_type' />
                                  </td>
                                
                                 <td name='line.type' class="text-right orisdi ">
                                  <span t-field='line.product_id.country_of_origin' />
                                  </td>
                     </xpath>


                    <xpath expr="//table[@name='invoice_line_table']//th[@name='th_type']" position="after">
                                    <th name="th_cofo" class="text-right orisdi"><span>بلد المنشأ </span></th> 
                            </xpath>


                    <xpath expr="//table[@name='invoice_line_table']//th[@name='th_taxes']" position="replace">
                            </xpath>
              
                <xpath expr="//div[@id='total']//table//tr[hasclass('o_total')]" position="after">
                        <tr>
                         <td>
                         <strong class="mr12">  الكمية المباعة  </strong>
                       </td>
                         <td class="text-right">
                         <span t-field="o.total_qty" class="text-left mr16"/>
                         </td>
                         </tr>
                    </xpath>
 
      


           <!--       
              <xpath expr="//div[@id='total']//table//tr" position="before">
                   <tr class="border-black o_total">
                     <td >
                         <strong class="orisdi">  المبلغ المستحق </strong>
                         </td>
                         <td class="text-right">
                     <span t-esc="o.partner_id.total_due-o.amount_total"/>
                     </td>
                  </tr>
                    </xpath>  -->
                     



</template>




</data>
</odoo>
