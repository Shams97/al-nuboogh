<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <template id="report_assets_common_custom_fonts" name="Custom QWeb fonts" inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <link href="al-nuboogh/static/src/css/fonts.css" rel="stylesheet" type="text/css"/>
        </xpath>
    </template>


    <template inherit_id="web.external_layout_standard" id="custom_nuboogh_layout">
        <xpath expr="//div[@t-att-style='report_header_style']//div[1]" position="replace">          
            <div class="row ml-4" style="width: 100%;">

              <div align="right" class="col-4" style="width: 50%;">
                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="min-height: 80px; max-height: 80px;" alt="Logo"/>
              </div>

              <div class="col-8 mb-2" style="width: 50%; margin-right: 120px; margin-top: 10px;">
                <div align="right" style="padding-right: 90px;">
                  <p style="font-weight: bold; line-height:0.2;">تجارة الادوات الاحتياطية والمنزلية</p>
                  <p style="font-size: small; line-height:0.1;">تدفئة وتبريد - جملة ومفرد - استيراد وتصدير</p>
                  <p style="font-size: small; line-height:0.1;">HOME EQUIPMENTS &amp; SPARE PARTS TRADE</p>
                  <p style="font-size: small; line-height:0.1;">Air Conditioning - Wholesale - Single - Import - Export</p>
                  <p style="font-size: small; line-height:0.1;">Tel: 8867516 - 8867517</p>
                </div>
              </div>

            </div>
        </xpath> 

        <xpath expr="//div[@name='company_address']//.." position="replace">
          <div class="row" style="margin-top: 20px;">
            <div class="col-4">
              <p align="right" style="line-height: 0.07;">رقم الشركة 07736264163</p>
              <p align="right" style="line-height: 0.07;">رقم الإدارة 07901103487</p>
              <p align="right" style="line-height: 0.07;">محمد شنون 07712700870</p>
            </div>

            <div class="col-4" style="border-right: solid black 1px; border-left: solid black 1px;">
              <p align="center" style="line-height: 0.07; font-weight: bold;">مبيعات</p>
              <p align="center" style="line-height: 0.07;">07834036241</p>
              <p align="center" style="line-height: 0.07;">07736737091</p>
            </div>

            <div class="col-4">
              <p align="left" style="line-height: 0.07;">Email: nuboogh_2003@yahoo.com</p>
              <p align="left" style="line-height: 0.07;">info@nuboogh.com</p>
              <p align="left" style="line-height: 0.07;">www.nuboogh.com</p>
            </div>
          </div>
        </xpath>

        <xpath expr="//t[@t-call='web.address_layout']//.." position="attributes">
          <attribute name="style">margin-bottom: 5px; margin-right: -1200px;</attribute>
          <attribute name="align">right</attribute>          
        </xpath>
    </template>



    <template id="nuboogh_invoice_report" inherit_id="account.report_invoice_document"> 

      <xpath expr="//div[@id='informations']//div[@name='origin']" position="after">
        <div class="col-auto mw-100 mb-2" t-if="o.warehouse_location_id.location_id">
          <strong>
            المخزن:  
          </strong>
          <br/> 
          <p t-field="o.warehouse_location_id.location_id"></p>
        </div>

        <div class="col-auto mw-100 mb-2" t-if="o.invoice_type">
          <strong>
            نوع الفاتورة :  
          </strong>
          <br/> 
          <p t-field="o.invoice_type"></p>
        </div>
      </xpath>

      <xpath expr="//address" position="attributes">
        <attribute name="style">margin-bottom: -500px;</attribute>          
        <attribute name="align">right</attribute>          
      </xpath>

      <xpath expr="//table[@name='invoice_line_table']//th[@name='th_description']//span" position="replace">
        <span>الصنف الأول</span>
      </xpath>
      <xpath expr="//table[@name='invoice_line_table']//th[@name='th_taxes']" position="replace"/>
      <xpath expr="//tbody[@class='invoice_tbody']//t[@name='account_invoice_line_accountable']//td[@t-if='display_discount']" position="replace"/>
      <xpath expr="//table[@name='invoice_line_table']//th[@name='th_price_unit']" position="replace"/>
      <xpath expr="//tbody[@class='invoice_tbody']//t[@name='account_invoice_line_accountable']//span[@id='line_tax_ids']//.." position="replace"/>

      <xpath expr="//table[@name='invoice_line_table']//th[@name='th_description']" position="after" >
        <th name="th_type" class="text-right"><span>الصنف الثاني</span></th>
        <th name="th_type" class="text-right"><span>الموديل</span></th>
        <th name="th_cofo" class="text-right"><span>بلد المنشأ </span></th> 
      </xpath>
      
      <xpath expr="//tbody[@class='invoice_tbody']//t[@name='account_invoice_line_accountable']//td[1]" position="after">                            
        <td name='line.type' class="text-right" >
          <span t-field='line.product_id.product_name_2'/>
        </td>

        <td name='line.type' class="text-right" >
          <span t-field='line.product_id.product_type'/>
        </td>

        <td name='line.origin' class="text-right">
          <span t-field='line.product_id.country_of_origin'/>
        </td>
      </xpath>

      <xpath expr="//div[@id='total']//table//tr[1]" position="before">
        <tr>
          <td>
            <strong class="mr12">الكمية المباعة</strong>
          </td>
          <td class="text-right">
            <span t-field="o.total_qty" class="text-left mr16"/>
          </td>
        </tr>
      </xpath>


      <xpath expr="//div[@id='total']" position="after">
				 	<div t-if="o.previous_customer_debit" class="row col-6" style="margin-bottom: 99px; margin-top: -99px;">

						<table class="table table-sm">
								<tr class="border-black o_subtotal" style="">
										<td><strong>الديون السابقة</strong></td>
										<td class="text-right">
												<span t-field="o.previous_customer_debit"/>
										</td>
								</tr>
								<tr class="border-black o_total">
										<td><strong>الديون الحالية</strong></td>
										<td class="text-right">
												<span t-field="o.partner_id.total_due"/>
										</td>
								</tr>
						</table>
					</div>
      </xpath>

      <xpath expr="//p[@name='payment_communication']" position="replace"/>
      <xpath expr="//p[@name='payment_term']" position="replace"/>

    </template>

</data>
</odoo>
