<odoo>
  <data>
    
    <template id="nuboogh_purchase_order_layout_a">
        <div t-attf-class="header o_company_#{o.company_id.id}_layout" t-att-style="report_header_style">
            <div class="row ml-4" style="width: 100%;">
             			<!-- START OF THE HEADER DIV  -->

	        	<div align="center" class="col-4" style="width: 50%;">
                  <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="min-height: 80px; max-height: 80px;" alt="Logo"/>
                </div>

                 <div t-if="o.company_id.id==2" class="col-4 mt-4" align="center"> 
                      <p style="font-weight: small; line-height:0.1;"> كومبانياى نبوغ </p>
                      <p style="font-weight: small; line-height:0.1;">  بوبازركانى كشتى سنوردار </p>
                      <p style="font-weight: small; line-height:0.1;">  فرع اربيل\ اقليم كردستان العراق </p> 
                 </div>

              <div class="col-8 mb-4" style="width: 50%; margin-top: 10px;">
               
                <div align="right" style="padding-right:90px;" t-if="o.company_id.id==1" >
                  <p style="font-weight: small; line-height:0.6;">تجارة الادوات الاحتياطية والمنزلية</p>
                  <p style="font-size: small; line-height:0.1;">تدفئة وتبريد - جملة ومفرد - استيراد وتصدير</p>
                  <p style="font-size: small; line-height:0.1;">HOME EQUIPMENTS &amp; SPARE PARTS TRADE</p>
                  <p style="font-size: small; line-height:0.1;">Air Conditioning - Wholesale - Single - Import - Export</p>
                  <p style="font-size: small; line-height:0.1;">8867516 - 8867517 : الهاتف</p>
                </div>

                <div align="right" style="padding-right: 100px;" t-if="o.company_id.id==3">
                  <h5 style="font-weight: bold; line-height:0.2; margin-bottom:10px;">   شركة النبوغ فرع الكفاح  </h5>
                </div>
             
                 <div align="right" t-if="o.company_id.id==2">
                  <h5 style="line-height:normal;">   شركة النبوغ فرع اربيل   </h5>
                  <p style="font-weight: small; line-height:0.6;"> للتجارة العامة المحدودة </p>
                  <p style="font-size: small; line-height:0.1;">تدفئة وتبريد - جملة ومفرد - استيراد وتصدير</p>
                  <p style="font-size: small; line-height:0.1;"> 07506687070 - 07702333108 - 07504698770  </p>
                </div>
             
                <div align="right" style="padding-right: 100px;" t-if="o.company_id.id==5">
                  <h5 style="line-height:normal;"> إيهاب المحبوب للتجارة العامة    </h5>
                  <p style="font-weight: small; line-height:normal;">تجارة عامة - تدفئة تبريد - منظومات ماء و قطع  غيرها </p>
                  <p style="font-size: small; line-height:0.1;">   بغداد - السنك - سوق التبريد جامع سلمان النقيب</p>
                </div>
                      
                      
                <div align="right" style="padding-right: 100px;" t-if="o.company_id.id==6">
                  <h5 style="line-height:normal;">  النبوغ/ عكد النصارى   </h5>
                  <p style="font-weight: small; line-height:0.6;">تجارة الادوات الاحتياطية والمنزلية</p>
                  <p style="font-size: small; line-height:0.1;">تدفئة وتبريد - جملة ومفرد - استيراد وتصدير</p>
                </div>
             
                <div align="right" style="padding-right: 100px;" t-if="o.company_id.id==9">
                  <h5 style="line-height:normal;">  النبوغ/ شركة الكوثر   </h5>
                  <p style="font-weight: small; line-height:normal;">     استيراد منظومات المياه و قطع الغيار التايونية الاصلية  </p>
                  <p style="font-size: small; line-height:0.1;">   بغداد - السنك - سوق التبريد   </p>
                </div>

                <div align="right" style="padding-right: 100px;" t-if="o.company_id.id==4">
                   <h5 style="line-height:normal;">  النبوغ /احمد المحبوب </h5>
                    <p style="font-weight: small; line-height:0.6;"> تجارة عامة </p>
                    <p style="font-weight: small; line-height:0.1;"> اجهزة منزلية - ادوات احتياطية  </p>
                    <p style="font-size: small; line-height:0.1;">  بغداد - السنك - مجاور شركة سامسونج سابقا  </p>
                    <p style="font-size: small; line-height:0.1;"> 07901592236 - 07724625643 </p>
                </div>
		      
              </div>
			<!-- END OF THE HEADER DIV  -->
            </div>
            <div t-if="o.company_id.logo or o.company_id.report_header" class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
          <div class="row" style="margin-top: 20px; padding-bottom: 40px;" t-if="o.company_id.id==1">
            <div class="col-4">
              <p align="right" style="line-height: 0.07; font-size: large; margin-left: -50px;">info@nuboogh.com</p>
            </div>

            <div class="col-4">
              <p align="center" style="line-height: 0.07; font-size: large;">www.nuboogh.com</p>
            </div>

            <div class="col-4">
              <p align="left" style="line-height: 0.07; font-size: large;">nuboogh_2003@yahoo.com</p>
            </div>
         
          </div>

          <div class="row" style="margin-top: 20px; padding-bottom: 40px;" t-if="o.company_id.id==5">
            <div class="col-4">
              <p align="right" style="line-height: 0.07;">hussein.ahmed@nuboogh.com</p>
            </div>

            <div class="col-4" style="border-right: solid black 1px; border-left: solid black 1px;"></div>

            <div class="col-4">
              <p align="left" style="line-height: 0.07;">hussein_almahbub@yahoo.com</p>
            </div>
          </div>

          <div class="row" style="margin-top: 20px; padding-bottom: 40px;" t-if="o.company_id.id==9">
            <div class="col-4">

            </div>

            <div class="col-4" style="border-right: solid black 1px; border-left: solid black 1px;">

            </div>

            <div class="col-4">
              <p align="left" style="line-height: 0.07;">nuboogh_2003@yahoo.com</p>
            </div>
          </div>

        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{o.company_id.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-5" style="margin-bottom: 10px; width: 100%;" align="right">
                <!-- This div ensures that the address is not cropped by the header. -->
                <t t-call="web.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>
    </template>
      
    <template inherit_id="purchase.report_purchaseorder_document" id="nuboogh_purchase_order_document">
<!--
-->
      <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
        <attribute name="t-call">al-nuboogh.nuboogh_purchase_order_layout_a</attribute>
      </xpath>

      <xpath expr="//th[@name='th_description']" position="replace">
        <th name="th_name_2" class="text-center"><strong>Name</strong></th>
        <th name="th_country_origin" class="text-center"><strong>Origin</strong></th>
        <th name="th_model" class="text-center"><strong>Type</strong></th>
      </xpath>
        
      <xpath expr="//th[@name='th_taxes']" position="replace"/>
      <xpath expr="//td[@name='td_taxes']" position="replace"/>

      <xpath expr="//td[@id='product']" position="replace">
        <td name="td_name_2"><span t-field="line.product_id.product_name_2"/></td>
        <td name="td_country_origin"><span t-field="line.product_id.country_of_origin_en"/></td>
        <td name="td_model"><span t-field="line.product_id.product_type_en"/></td>
      </xpath>

    </template>

    
    
  </data>
</odoo>
