                                <th style="text-align: center;">التكلفة</th>


                                <!-- <th align="right">Quantity</th> -->
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="s_no" t-value="0"/>
                            <tr t-foreach="doc_quantities" t-as="line">

                                <t t-set="s_no" t-value="s_no+1"/>
                                <td style="text-align: center;">
                                    <span t-esc="float('%.2f' % float(line['loc_total']))"/>
                                </td>
				 <td style="text-align: center;">
                                    <span t-esc="line['name']"/>
                                </td>
				 <td style="text-align: center;">
                                    <span t-esc='line["product_name_2"]'/>
                                </td>
				 <td style="text-align: center;">
                                    <span t-esc="line['default_code']"/>
                                </td>
				 <td style="text-align: center;">
                                    <span t-esc="line['standard_price']"/>
                                </td>    
                            </tr>
                        </tbody>
                    </table>
                    <t t-set="total" t-value="0"/>
                    <t t-foreach="doc_quantities" t-as="line">
                        <t t-set="total" t-value="total + line['loc_total']"/>
                    </t>
