<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="second_inventory_custom_external_layout">
        <div t-attf-class="header o_company_#{company.id}_layout">
            <div class="row mt32 mb20" id="informations" style="font-family: Arial, serif;">
                <div align="left" class="col-5">
                 <h2>
                        Al-nuboogh
                    </h2>
                      <p style="font-size:20px ; padding-bottom: 10px;">
                            HOME EQUIPMENTS AND SPARE PARTS TRADE
                        </p>
                <!-- <div style="border-bottom: 1px solid black;"/> -->
                </div>

                <div align="center" class="col-2 text-center">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" class="img " alt="Logo" style="width:170px; height:100px"/>
                </div>

                <div align="right" class="col-5 " style="float:right;">
                    <h2>
                       شركة النبوغ
                    </h2>
                     <p style="font-size:20px; padding-bottom: 10px;">
                            للتجارة العامة المحدودة
                        </p>
                </div>

            </div>
                <div style="border-bottom: 1px solid black;"/>
        </div>


        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>
    </template>

	<template id="inventory_custom_external_layout">

        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">

            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

<!--         <t t-esc="company.update_scss()"/> -->

        <t t-call="report_stock_inventory.second_inventory_custom_external_layout">
            <t t-raw="0"/>
        </t>
    </template>


