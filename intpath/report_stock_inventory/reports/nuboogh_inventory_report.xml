                <t t-if="docs">
                    <table t-if="include_lines" class="table table-condensed">
                        <thead>
                            <tr>
                                <th align="right">الكمية</th>
			        <th align="right">الموقع</th>
                                <th style="text-align: center;">اسم المادة ١</th>                                
                                <th style="text-align: center;">اسم المادة ٢</th>
